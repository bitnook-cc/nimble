{
  "name": "@nimble/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api",
    "apps/discord",
    "apps/vault",
    "apps/portal",
    "packages/shared",
    "packages/shared-config",
    "packages/shared-auth",
    "packages/nimble-dice"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@nimble/web",
    "dev:api": "turbo dev --filter=@nimble/api",
    "dev:discord": "turbo dev --filter=@nimble/discord",
    "dev:vault": "turbo dev --filter=@nimble/vault",
    "dev:portal": "turbo dev --filter=@nimble/portal",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:ui": "turbo test:ui",
    "prepare": "npx husky || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.5.8"
  },
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
