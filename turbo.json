{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "SESSION_SECRET",
    "API_URL",
    "PORT",
    "COOKIE_DOMAIN",
    "ALLOWED_ORIGINS",
    "NODE_ENV",
    "DATABASE_URL",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NIMBLE_JWT_SECRET",
    "NEXT_PUBLIC_SITE_URL",
    "VAULT_APP_URL",
    "CHARACTERS_APP_URL",
    "DICE_APP_URL",
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "PATREON_CLIENT_ID",
    "PATREON_CLIENT_SECRET",
    "VAULT_CONTENT_REPO",
    "VAULT_CONTENT_BRANCH"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "dist/**"],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET", 
        "SESSION_SECRET",
        "API_URL",
        "PORT",
        "COOKIE_DOMAIN",
        "ALLOWED_ORIGINS",
        "NODE_ENV",
        "DATABASE_URL",
        "BLOB_READ_WRITE_TOKEN",
        "DISCORD_APP_ID",
        "DISCORD_PUBLIC_KEY",
        "DISCORD_BOT_TOKEN",
        "PUSHER_APP_ID",
        "PUSHER_KEY",
        "PUSHER_SECRET",
        "PUSHER_CLUSTER",
        "NEXT_PUBLIC_PUSHER_KEY",
        "NEXT_PUBLIC_PUSHER_CLUSTER",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NIMBLE_JWT_SECRET",
        "NEXT_PUBLIC_SITE_URL",
        "VAULT_APP_URL",
        "CHARACTERS_APP_URL",
        "DICE_APP_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "PATREON_CLIENT_ID",
        "PATREON_CLIENT_SECRET",
        "VAULT_CONTENT_REPO",
        "VAULT_CONTENT_BRANCH"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "test:ui": {
      "cache": false
    },
    "test:run": {
      "dependsOn": ["^test:run"]
    },
    "db:start-local": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["db:start-local"],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET", 
        "SESSION_SECRET",
        "PORT",
        "NODE_ENV",
        "DATABASE_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NIMBLE_JWT_SECRET",
        "NEXT_PUBLIC_SITE_URL",
        "COOKIE_DOMAIN",
        "VAULT_APP_URL",
        "CHARACTERS_APP_URL",
        "DICE_APP_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "PATREON_CLIENT_ID",
        "PATREON_CLIENT_SECRET",
        "VAULT_CONTENT_REPO",
        "VAULT_CONTENT_BRANCH"
      ]
    }
  }
}